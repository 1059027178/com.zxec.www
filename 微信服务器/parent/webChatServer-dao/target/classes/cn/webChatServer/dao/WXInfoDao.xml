<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.webChatServer.dao.WXInfoDao">

	<!-- 通过className查询 -->
	<select id="queryByClassName" parameterType="cn.webChatServer.pojo.WXInfo">
		select * from WXInfo where className = #{className}
	</select>
	<!-- 通用条件查询 -->
	<select id="queryByCondition" parameterType="cn.webChatServer.pojo.WXInfo">
		select * from WXInfo where (1 = 1 #{condition})
	</select>
	<update id="updateWXInfo" parameterType="cn.webChatServer.pojo.WXInfo">
		update WXInfo
		set
			accessToken = #{accessToken}
		where
			(className = #{className})
			
	</update>
</mapper>
