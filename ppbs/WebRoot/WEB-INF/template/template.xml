<?xml version="1.0" encoding="UTF-8"?>
<tkwrdp>
	<description>模板配置文件</description>
	<dynamicConfig>
		<index>
			<description>首页</description>
			<templateFilePath>/WEB-INF/template/front/index.ftl</templateFilePath>
		</index>
		<login>
			<description>登录</description>
			<templateFilePath>/WEB-INF/template/front/login.ftl</templateFilePath>
		</login>
		<about>
			<description>关于我们</description>
			<templateFilePath>/WEB-INF/template/front/about.ftl</templateFilePath>
		</about>
		<header>
			<description>顶部内容</description>
			<templateFilePath>/WEB-INF/template/front/header.ftl</templateFilePath>
		</header>
		<footer>
			<description>底部内容</description>
			<templateFilePath>/WEB-INF/template/front/footer.ftl</templateFilePath>
		</footer>
		<pager>
			<description>分页</description>
			<templateFilePath>/WEB-INF/template/front/pager.ftl</templateFilePath>
		</pager>
		<successPage>
			<description>成功提示页面</description>
			<templateFilePath>/WEB-INF/template/front/success.ftl</templateFilePath>
		</successPage>
		<errorPage>
			<description>错误提示页</description>
			<templateFilePath>/WEB-INF/template/front/error.ftl</templateFilePath>
		</errorPage>
		<invalidToken>
			<description>重复提交错误提示</description>
			<templateFilePath>/WEB-INF/template/front/invalid_token.ftl</templateFilePath>
		</invalidToken>
	</dynamicConfig>
	<htmlConfig>
		<articleContent>
			<description>文章内容</description>
			<templateFilePath>/WEB-INF/template/front/article_content.ftl</templateFilePath>
			<htmlFilePath>/html/article_content/{date_yyyy}{date_MM}/{uuid}.html</htmlFilePath>
		</articleContent>
		<productContent>
			<description>商品内容</description>
			<templateFilePath>/WEB-INF/template/front/product_content.ftl</templateFilePath>
			<htmlFilePath>/html/product_content/{date_yyyy}{date_MM}/{uuid}.html</htmlFilePath>
		</productContent>
	</htmlConfig>
	<mailConfig>
		<smtpTest>
			<description>SMTP邮箱配置测试</description>
			<subject>SMTP邮箱配置测试</subject>
			<templateFilePath>/WEB-INF/template/front/mail_smtp_test.ftl</templateFilePath>
		</smtpTest>
		<passwordRecover>
			<description>密码找回</description>
			<subject>密码找回</subject>
			<templateFilePath>/WEB-INF/template/front/mail_password_recover.ftl</templateFilePath>
		</passwordRecover>
	</mailConfig>
</tkwrdp>